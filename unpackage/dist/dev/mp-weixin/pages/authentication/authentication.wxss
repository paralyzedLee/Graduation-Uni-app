
.container {
	padding: 1rpx;
	height: 100%;
}
.form {
	padding: 5% 5% 0 5%;
}
.changeTextView {
	position: absolute;
	bottom: calc(120rpx + 5%);
	left: 50%;
	-webkit-transform: translateX(-50%);
	        transform: translateX(-50%);
	display: flex;
	flex-direction: row;
	align-items: center;
}
.changeText {
	font-size: 14;
	text-decoration: underline;
	color: #666666;
	white-space: nowrap;
}
.button {
	position: absolute;
	width: 80%;
	bottom: 5%;
	left: 50%;
	-webkit-transform: translateX(-50%);
	        transform: translateX(-50%);
}
.mid {
	display: inline-block;
	height: 10px;
	width: 1px;
	margin: 0 10px;
	vertical-align: middle;
	background-color: #e2e2e2;
}

