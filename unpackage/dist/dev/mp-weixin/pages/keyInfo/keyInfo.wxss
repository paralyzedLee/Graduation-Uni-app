
.container {
	padding: 1rpx;
	height: 100%;
	background-color: #e8e8e8;
}
.info {
	position: relative;
	height: 40%;
}
.logo {
	top: 5vh;
	position: absolute;
	left: 50%;
	-webkit-transform: translateX(-50%);
	        transform: translateX(-50%);
}
.address {
	position: absolute;
	width: 80%;
	left: 70%;
	top: 20vh;
	font-size: 3.5vh;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
	-webkit-transform: translateX(-50%);
	        transform: translateX(-50%);
}
.lockId {
	position: absolute;
	left: 50%;
	-webkit-transform: translateX(-50%);
	        transform: translateX(-50%);
	top: 25vh;
	font-size: 2vh;
}
.state {
	position: absolute;
	left: 50%;
	-webkit-transform: translateX(-50%);
	        transform: translateX(-50%);
	top: 28vh;
	font-size: 2vh;
	color: #000000;
}
.wifi {
	position: absolute;
	left: 50%;
	-webkit-transform: translateX(-50%);
	        transform: translateX(-50%);
	top: 31vh;
	font-size: 2vh;
	color: #000000;
}
.functions{
	position: absolute;
	top: 45%;
	width: 90%;
	left: 5%;
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
	justify-items: center;
	justify-content: center;
	align-items: center;
}
.function{
	margin-bottom: 1vh;
	width: 25%;
	height: 20vh;
	display: flex;
	flex-direction: column;
	align-items: center;
}
.description{
	font-size: 1.1rem;
	margin-top: 2vh;
}
.button{
	position: absolute;
	width: 80%;
	bottom: 5%;
	left: 50%;
	-webkit-transform: translateX(-50%);
	        transform: translateX(-50%);
}

