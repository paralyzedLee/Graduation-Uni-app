
.container {
	padding: 1rpx;
	height: 100%;
	background-color: #c0d8f1;
}
.top-box {
	height: 400rpx;
	background-color: #c0d8f1;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}
.avatar {
	display: block;
	width: 90px;
	height: 90px;
	border-radius: 45px;
	border: 2px solid white;
	box-shadow: 0 1px 5px black;
}
.nickname {
	color: white;
	font-weight: bold;
	font-size: 16px;
	margin-top: 10px;
}
.myItem {
	border-top: 2rpx solid #ffffff;
	position: relative;
	background-color: white;
	height: 13%;
}
.icon {
	top: 50%;
	left: 3%;
	-webkit-transform: translateY(-50%);
	        transform: translateY(-50%);
	position: absolute;
	width: 100rpx;
}
.text {
	top: 50%;
	-webkit-transform: translateY(-50%);
	        transform: translateY(-50%);
	left: 15%;
	position: absolute;
	flex-grow: 1;
}
.arrow {
	position: absolute;
	top: 50%;
	-webkit-transform: translateY(-50%);
	        transform: translateY(-50%);
	right: 3%;
	width: 50rpx;
	color: #323232;
	font-weight: 600;
}

