	// tabBar是自带底部导航栏
	"tabBar": {
		"color": "#272636",
		"selectedColor": "#0000ff",
		"backgroundColor": "#fff",
		"borderStyle": "black",
		"list": [{
				"pagePath": "pages/index/index",
				"text": "首页",
				"iconPath": "static/icon/首页-1.png",
				"selectedIconPath": "static/icon/首页-2.png"
			},
			{
				"pagePath": "pages/my/my",
				"text": "其他服务",
				"iconPath": "static/icon/我的-1.png",
				"selectedIconPath": "static/icon/我的-2.png"
			}
		]
	},
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "一键开锁",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#c0d8f1",
		"app-plus": {
			"background": "#efeff4"
		}
	}
